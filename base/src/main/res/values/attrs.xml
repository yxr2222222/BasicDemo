<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MultipleStatusView">
        <attr name="loadingView" format="reference" />
        <attr name="errorView" format="reference" />
        <attr name="emptyView" format="reference" />
        <attr name="contentView" format="reference" />
    </declare-styleable>


    <declare-styleable name="ImageTextView">
        <attr name="imageOrientation">
            <enum name="left" value="0" />
            <enum name="top" value="1" />
            <enum name="right" value="2" />
            <enum name="bottom" value="3" />
        </attr>
        <attr name="imageRes" format="reference" />
        <attr name="imageCheckRes" format="reference" />
        <attr name="imageWidth" format="dimension" />
        <attr name="imageHeight" format="dimension" />

        <attr name="textNormalColor" format="color" />
        <attr name="textCheckColor" format="color" />
        <attr name="textNormalSize" format="float" />
        <attr name="textNormal" format="string" />
        <attr name="textCheck" format="string" />

        <attr name="imageTextPadding" format="dimension" />

        <attr name="checked" format="boolean" />
        <attr name="textShow" format="boolean" />
        <attr name="textBold" format="boolean" />
        <attr name="checkBold" format="boolean" />
        <attr name="imageShow" format="boolean" />
        <attr name="centerGravity" format="boolean" />
        <attr name="isTextFill" format="boolean" />
    </declare-styleable>

    <declare-styleable name="GifImageTextView">
        <attr name="isGifAutoPlay" format="boolean"/>
        <attr name="isNoImageIcon" format="boolean"/>
        <attr name="isStopSeekToFirst" format="boolean"/>
    </declare-styleable>
</resources>