<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white_ffffff_radius10"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp32"
        android:layout_marginTop="@dimen/dp40"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/dp4"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/sp16"
        tools:text="这是一个标题" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp0_5"
        android:layout_marginTop="@dimen/dp40"
        android:background="@color/white_eeeeee" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp48"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvCancel"
            android:layout_width="@dimen/dp0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/cancel"
            android:textStyle="bold"
            android:textColor="@color/gray_a7a7a7"
            android:textSize="@dimen/sp16" />

        <View
            android:layout_width="@dimen/dp0_5"
            android:layout_height="match_parent"
            android:background="@color/white_eeeeee" />

        <TextView
            android:id="@+id/tvConfirm"
            android:layout_width="@dimen/dp0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textStyle="bold"
            android:gravity="center"
            android:text="@string/confirm"
            android:textColor="@color/blue_007aff"
            android:textSize="@dimen/sp16" />
    </LinearLayout>
</LinearLayout>